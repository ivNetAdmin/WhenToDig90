<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhenToDig90.Views.CalendarPage">
  
  <ContentPage.ToolbarItems>
    <ToolbarItem Icon="{Binding CalendarIcon}" />
    <ToolbarItem Icon="{Binding JobIcon}" Command="{Binding JobNavigationCommand}"/>
    <ToolbarItem Icon="{Binding ReviewIcon}" Command="{Binding ReviewNavigationCommand}"/>
    <ToolbarItem Icon="{Binding PlantIcon}" Command="{Binding PlantNavigationCommand}"/>
  </ContentPage.ToolbarItems>
  
  <ContentPage.Content>
    <StackLayout>
      <StackLayout.Children>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Button Text="<<" Grid.Row="0" Grid.Column="0" />
          <Button Text="<" Grid.Row="0" Grid.Column="1" />
          <Label Text="Month" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" />
          <Button Text=">" Grid.Row="0" Grid.Column="5" />
          <Button Text=">>" Grid.Row="0" Grid.Column="6" />
        </Grid>
        <Grid x:Name="CalendarGrid" />
      </StackLayout.Children>
   </StackLayout>
  </ContentPage.Content>
</ContentPage>
