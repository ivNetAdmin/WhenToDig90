<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhenToDig90.Views.CalendarPage">
  
  <ContentPage.ToolbarItems>
    <ToolbarItem Icon="{Binding CalendarIcon}" />
    <ToolbarItem Icon="{Binding JobIcon}" Command="{Binding JobNavigationCommand}"/>
    <ToolbarItem Icon="{Binding ReviewIcon}" />
    <ToolbarItem Icon="{Binding PlantIcon}" />
  </ContentPage.ToolbarItems>
  
  <ContentPage.Content>
    <Button Text="Navigate to second page" Command="{Binding NavigationCommand}" VerticalOptions="Center" HorizontalOptions="Center" />
  </ContentPage.Content>
</ContentPage>
