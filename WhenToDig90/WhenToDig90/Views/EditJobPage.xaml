<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhenToDig90.Views.EditJobPage">

  <ContentPage.Content>
    <StackLayout>
      <StackLayout.Children>
        <TableView Intent="Form">
          <TableRoot>
            <TableSection Title="Job Form">
              <ViewCell>
                <StackLayout Orientation="Horizontal">
                  <Entry Label ="Description" Placeholder="Job Description" />
                </StackLayout>
              </ViewCell>
            </TableSection>
          </TableRoot>
        </TableView>
        <Grid>
          <Button Text="Save" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Start"/>
          <Button Text="Cancel" Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2" HorizontalOptions="End" Command="{Binding CancelCommand}"/>
        </Grid>
        </StackLayout.Children>
      </StackLayout>
    </ContentPage.Content>
</ContentPage>
